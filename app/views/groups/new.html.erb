<div class="blue-header header-item">
  <h2><%= link_to "<", groups_path, class: "color-white" %></h2> 
</div>

<div class="sign-in-page">
 <%= form_with scope: :group, url: groups_path, local: true do |form| %>

  <div class="form-label">
    <%= form.text_field :name, placeholder: "Name", class: "input-sign-in" %>
  </div>
  <hr>
  <hr>
  <div class="form-label">
    <%= form.text_field :icon, placeholder: "Add Icon", class: "input-sign-in" %>
  </div>  
  <hr>
  <hr>
  <div class="form-label">
    <%= form.text_field :description, placeholder: "Description", class: "input-sign-in" %>
  </div> 
  <br>

  <div class="form-label">
    <%= form.submit "create", class: "sign-up-btn" %>
  </div>

    <% end %>
</div>